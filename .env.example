# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
DATABASE_URL=sqlite:///db.sqlite3

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here
ENABLE_AI_FEATURES=true
AI_FALLBACK_MODE=graceful

# NLP Services
SPACY_MODEL_EN=en_core_web_sm
SPACY_MODEL_ES=es_core_news_sm
ENABLE_NLP_FEATURES=true

# External APIs
WIKIPEDIA_USER_AGENT=VeriFastApp/1.0
WIKIPEDIA_RATE_LIMIT=10
ENABLE_WIKIPEDIA_VALIDATION=true
ENABLE_ARTICLE_SCRAPING=true

# News APIs for Content Acquisition
NEWSDATA_API_KEY=your-newsdata-api-key-here
GNEWS_API_KEY=your-gnews-api-key-here
NEWSAPI_KEY=your-newsapi-key-here
ENABLE_CONTENT_ACQUISITION=true

# Service Health
HEALTH_CHECK_INTERVAL=300
LOG_SERVICE_ERRORS=true

# Redis/Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO

# Performance
MAX_ARTICLE_LENGTH=100000
PROCESSING_TIMEOUT=300
CONCURRENT_WORKERS=4